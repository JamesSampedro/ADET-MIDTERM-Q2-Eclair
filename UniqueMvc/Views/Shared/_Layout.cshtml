<!DOCTYPE html>
<html lang="en">
<head>
    @* mathew and benedict in designing*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniqueMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/lux.css" />
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet"> <!--eto yung link ng font sa "Eclair" natin-->
    <link href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light&display=swap" rel="stylesheet"><!--eto yung link ng font sa lahat-->

    <style>
        .DaBody {
            background-color: #65CCB8;
            font-family: 'Shadows Into Light', cursive;
            height: 100%;
            display: block;
        }


        .containerTo {
            background-color: #3DA591;
        }

        .container .navbar-brand {
            font-family: 'Indie Flower', cursive;
            color: whitesmoke;
            font-size: 20px;
            position: relative;
            left: 20px;
            top: 0;
        }

        .navbar-collapse .navbar-nav {
            color: whitesmoke;
            position: relative;
            right: 0;
            top: 0;
        }

        .navbar a:hover {
            background-color: #dc8b0c;
            color: #dc8b0c;
        }
    </style>

</head>

        <body class="DaBody">

            <div class="containerTo">
                <div class="badge badge-pill badge-warning">
                    &copy; 2020 - UniqueMvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>

            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-warning">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Eclair</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>

                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Admin">Admin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Student">Student</a>
                            </li>
                        </ul>
                    </div>
                    </div>
                </nav>
            </header>
            <div class="justbox"></div> <!--eto yung footer natin yung kulay white-->
            <div class="justboxxx"></div><!--eto yung pinaka content box natin-->
            <div class="notjustbox"></div><!--eto naman yung box na nasa bottom center-->




            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @RenderSection("Scripts", required: false)
    </body>
</html>